@* @page "/create-account"

<div class="mobile-container">
    <div class="header">
        <div class="logo-circle">
            <svg viewBox="0 0 24 24" fill="white" width="28" height="28">
                <path d="M12 2C6.48 2 2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15h-2v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95 0-5.52-4.48-10-10-10z" />
            </svg>
        </div>
        <h1 class="title">Create Account</h1>
        <p class="subtitle">Join our community today</p>
    </div>

    <div class="form-container">
        <div class="form-intro">
            <h2>Get Started</h2>
            <p>Fill in your details to create your account</p>
        </div>

        <EditForm Model="@accountModel" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="name" class="form-label">Full Name</label>
                <InputText id="name" class="form-input" @bind-Value="accountModel.Name" placeholder="Enter your name" />
                <ValidationMessage For="@(() => accountModel.Name)" class="validation-message" />
            </div>

            <div class="form-group">
                <label for="cookies" class="form-label">Cookies</label>
                <InputText id="cookies" class="form-input" @bind-Value="accountModel.Cookies" placeholder="Enter cookies value" />
                <ValidationMessage For="@(() => accountModel.Cookies)" class="validation-message" />
            </div>

            <button type="submit" class="submit-btn">
                <span>Create Account</span>
                <svg viewBox="0 0 24 24" fill="white" width="18" height="18">
                    <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z" />
                </svg>
            </button>
        </EditForm>
    </div>

</div>
 *@