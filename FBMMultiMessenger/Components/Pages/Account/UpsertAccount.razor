@page "/create/account"
@page "/edit/{AccountId}/account/{name}/{cookie}"

@using FBMMultiMessenger.Components.Shared.CustomPopupform

@if (IsMobilePlatform)
{
    <div class="mobile-container">
        <div class="header">
            <div class="logo-circle">
               @*  <div class="logo">
                    FBM
                </div> *@
                <svg viewBox="0 0 24 24" fill="white" width="28" height="28">
                    <path d="M12 2C6.48 2 2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15h-2v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95 0-5.52-4.48-10-10-10z" />
                </svg>
            </div>
            <h1 class="title">@Title</h1>
            <p class="subtitle">@SubTitle</p>
        </div>

        <div class="form-container">
            <div class="form-intro">
                <h2>@Heading</h2>
                <p>@Description</p>
            </div>

            <EditForm Model="@model" OnValidSubmit="@OnValidSubmit">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label for="name" class="form-label">Full Name</label>
                    <InputText id="name" class="form-input" @bind-Value="model.Name" placeholder="Enter your name" />
                    <ValidationMessage For="@(() => model.Name)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="cookies" class="form-label">Cookies</label>
                    <InputText id="cookies" class="form-input" @bind-Value="model.Cookie" placeholder="Enter cookies value" />
                    <ValidationMessage For="@(() => model.Cookie)" class="validation-message" />
                </div>

                <button type="submit" class="submit-btn">
                    <span>@ButtonText</span>
                    <svg viewBox="0 0 24 24" fill="white" width="18" height="18">
                        <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z" />
                    </svg>
                </button>
            </EditForm>
        </div>

    </div>
}
else
{
    <PopupForm Model="@model" OnValidSubmit="OnValidSubmit" Setting="popupFormSettings">
        <div>
            <MudTextField @bind-Value="model.Name" Label="Name" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AccountCircle" />
            <MudTextField @bind-Value="model.Cookie" Label="Cookies" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Cookie" />
        </div>
        <CustomPopupFormActions>

            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">
                <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="me-2" />
                Add
            </MudButton>

            <MudButton OnClick="Cancel" Color="Color.Primary">Cancel</MudButton>
        </CustomPopupFormActions>
    </PopupForm>
}




