<div class="mobile-sidebar">
    <!-- Mobile Menu Header -->
    <div class="mobile-menu-header">
        <a href="/account" class="mobile-menu-title-row">
            <span class="mobile-close-btn"><i class="fa-sharp fa-solid fa-arrow-left"></i></span>
            <div class="mobile-menu-title">Menu</div>
