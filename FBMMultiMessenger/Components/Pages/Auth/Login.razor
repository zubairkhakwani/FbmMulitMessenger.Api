@page "/"
@layout EmptyLayout

<PageTitle>FBMMultiMessenger - Login</PageTitle>

@{
    var state = ShowLoader ? "" : "";
}


<div class="page-container">
    <div class="login-container">
        <!-- Header -->
        <div class="login-header">
            <h1>Welcome Back</h1>
            <p>Sign in to your FBM Multi Messenger account</p>
        </div>

        <!-- Login Form -->
        <div class="login-form">
            <EditForm Model="RequestModel"
                      class="signin-form"
                      OnValidSubmit="OnValidPost"
                      FormName="a"
                      Enhance="true">

                <DataAnnotationsValidator />

                @if (!string.IsNullOrWhiteSpace(ResponseError))
                {
                    <div class="error-message">@ResponseError</div>
                }

                <!-- Email Field -->
                <div class="form-group">
                    <InputText @bind-Value="RequestModel.Email"
                               type="email"
                               class="input"
                               placeholder="Email address" />
                    <ValidationMessage For="@(() => RequestModel.Email)"
                                       class="validation-message" />
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <div class="password-container">
                        <InputText @bind-Value="RequestModel.Password"
                                   type="password"
                                   id="password"
                                   class="input"
                                   placeholder="Password" />
                    </div>
                    <ValidationMessage For="@(() => RequestModel.Password)"
                                       class="validation-message" />
                </div>

                <!-- Forgot Password -->
                <div class="forgot-password">
                    <a href="#">Forgot your password?</a>
                </div>

                <!-- Sign In Button -->
                @if (ShowLoader)
                {
                    <button disabled type="submit" class="sign-in-button">
                        <div class="loader"></div>
                    </button>
                }
                else
                {
                    <button type="submit" class="sign-in-button">
                        SignIn
                    </button>
                }

            </EditForm>

            <!-- Divider -->
            <div class="divider">
                <span>New to FBM Robo?</span>
            </div>

            <!-- Sign Up Link -->
            <div class="signup-link">
                <a href="/register">Create Account</a>
            </div>
        </div>
    </div>
</div>
