@page "/register"
@layout EmptyLayout

<PageTitle>FBMMultiMessenger - Register</PageTitle>

<div class="page-container">
    <div class="register-container">
        <!-- Header -->
        <div class="register-header">
            <h1>Create Account</h1>
            <p>Join FBM Multi Messenger today</p>
        </div>

        <!-- Registration Form -->
        <div class="register-form">
            <EditForm Model="@RequestModel"
                      OnValidSubmit="OnValidSubmit"
                      id="registerForm">

                <DataAnnotationsValidator />
                @if (!string.IsNullOrWhiteSpace(ResponseError))
                {
                    <div class="error-message">@ResponseError</div>
                }

                <!-- Username Field -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <InputText type="text"
                                   class="input"
                                   id="username"
                                   placeholder="Username"
                                   @bind-Value="RequestModel.Name" />
                        <i class="fa-solid fa-user input-icon"></i>
                        <ValidationMessage For="@(() => RequestModel.Name)"
                                           class="validation-message" />
                    </div>
                    <div class="input-wrapper">
                        <InputText type="tel"
                                   class="input"
                                   id="contactNumber"
                                   placeholder="Contact Number"
                                   pattern="[0-9]*"
                                   inputmode="numeric"
                                   @bind-Value="RequestModel.ContactNumber" />
                        <i class="fa-solid fa-phone input-icon"></i>
                        <ValidationMessage For="@(() => RequestModel.ContactNumber)"
                                           class="validation-message" />
                    </div>
                </div>


                <!-- Email Field -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <InputText type="email"
                                   class="input"
                                   id="email"
                                   placeholder="Email address"
                                   @bind-Value="RequestModel.Email" />
                        <i class="fa-solid fa-envelope input-icon"></i>
                        <ValidationMessage For="@(() => RequestModel.Email)"
                                           class="validation-message" />
                    </div>
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <div class="input-wrapper password-container">
                        <InputText type="password"
                                   class="input"
                                   id="password"
                                   placeholder="Password"
                                   @bind-Value="RequestModel.Password" />
                        <i class="fa-solid fa-lock input-icon"></i>
                        <ValidationMessage For="@(() => RequestModel.Password)"
                                           class="validation-message" />
                    </div>

                    <div class="input-wrapper password-container">
                        <InputText type="password"
                                   class="input"
                                   id="confirm-password"
                                   placeholder="Confirm Password"
                                   @bind-Value="RequestModel.ConfirmPassword" />
                        <i class="fa-solid fa-lock input-icon"></i>
                        <ValidationMessage For="@(() => RequestModel.ConfirmPassword)"
                                           class="validation-message" />
                    </div>
                </div>

                <!-- Terms & Conditions -->
                @* <div class="terms-checkbox">
                    <InputCheckbox @bind-Value="RequestModel.AcceptTerms" id="terms" />
                    <label for="terms">
                        I agree to the <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a>
                    </label>
                    <ValidationMessage For="@(() => RequestModel.AcceptTerms)" class="validation-message" />
                </div> *@

                <!-- Register Button -->
                @if (ShowLoader)
                {
                    <button disabled type="submit" class="register-button">
                        <div class="loader"></div>
                    </button>
                }
                else
                {
                    <button type="submit" class="register-button">Create Account</button>
                }

            </EditForm>

            <!-- Divider -->
            <div class="divider">
                <span>Already have an account?</span>
            </div>

            <!-- Sign In Link -->
            <div class="signin-link">
                <a href="/">Sign In</a>
            </div>
        </div>
    </div>
</div>