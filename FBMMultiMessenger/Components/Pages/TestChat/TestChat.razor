@* @page "/test-chat"
@inject SignalRChatService ChatService

<h3>Chat</h3>

<input @bind="user" placeholder="Your name" />
<input @bind="message" placeholder="Message" />
<button @onclick="Send">Send</button>

<ul>
    @foreach (var msg in messages)
    {
        <li><b>@msg.User:</b> @msg.Text</li>
    }
</ul>

@code {
    private string user;
    private string message;
    private List<(string User, string Text)> messages = new();

    protected override async Task OnInitializedAsync()
    {
        ChatService.OnMessageReceived += (u, m) =>
        {
            messages.Add((u, m));
            InvokeAsync(StateHasChanged);
        };

        await ChatService.ConnectAsync();
    }

    private async Task Send()
    {
        if (!string.IsNullOrWhiteSpace(user) && !string.IsNullOrWhiteSpace(message))
        {
            await ChatService.SendMessage(user, message);
        }
    }
}

 *@