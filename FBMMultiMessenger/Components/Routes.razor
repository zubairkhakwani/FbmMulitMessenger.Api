@using FBMMultiMessenger.Helpers
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager navigationManager


<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(MauiProgram).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData">
                <NotAuthorized>
                    @{
                        AuthenticationHelper.HandleUnAuthorizedAccess(context, navigationManager);
                    }
                </NotAuthorized>
                <Authorizing>
                    <div class="loading-parent-container">
                        <div class="particles-1"></div>
                        <div class="particles-2"></div>
                        <div class="particles-3"></div>
                        <div class="particles-4"></div>
                        <div class="particles-5"></div>
                        <div class="particles-6"></div>

                        <div class="particles-7"></div>
                        <div class="particles-8"></div>
                        <div class="particles-9"></div>
                        <div class="particles-10"></div>
                        <div class="particles-11"></div>
                        <div class="particles-12"></div>


                        <div class="loading-container">
                         @*    <div class="loading-logo">FBM Multi Messenger</div> *@
                            <div class="loading-text">Getting things ready for you<span class="dots"></span></div>
                            <div class="status-text" id="statusText"></div>
                            <div class="progress-container">
                                <div class="progress-bar" id="progressBar"></div>
                            </div>
                            <div class="percentage" id="percentage"></div>
                        </div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
    </Router>
</CascadingAuthenticationState>